@typeparam TModel


<div class="container">
    @if (Model != null)
    {
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card pet-profile">                
                <div class="card-body">
                    <h2 class="card-title">@GetName()</h2>                    
                    <p class="card-text">Gender: @GetGender()</p>
                    <p class="card-text">Age: @GetAge() years old</p>
                    <p class="card-text">Size: @GetSize()</p>
                    <p class="card-text">Size: @GetSpecie()</p>
                    <p class="card-text">Size: @GetRace()</p>
                    <p class="card-text">Weight: @GetWeight() kg</p>
                    <p class="card-text">Color: @GetColor()</p>
                    <p class="card-text">Health Condition: @GetHealthCondition()</p>
                    <p class="card-text">Behavior: @GetBehavior()</p>
                </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="alert alert-warning" role="alert">
                    No pet data available
                </div>
            </div>
        </div>
    }
</div>