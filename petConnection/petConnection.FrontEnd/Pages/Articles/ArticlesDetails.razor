@page "/articles/details/{Id:int}"

@if (article is null)
{
    <Loading />
}
else
{
    <div class="mb-2">
        <a class="btn btn-success" href="/articles">Regresar</a>
    </div>
    <div style="width:100%; height:100px;"><img src="@article.PhotoPath" class="card-img-top rounded-top img-fluid" alt="@article.Title"></div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@article.Title</h5>
            <p class="card-text">@article.Text</p>
            <p class="card-text"><small class="text-muted">Published At: @article.CreatedAt.ToString("MM/dd/yyyy")</small></p>
        </div>
    </div>
}