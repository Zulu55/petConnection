@page "/pets";

<h3>Paises</h3>

<div class="mb-3">
    <a class="btn btn-primary" href="/pets/create">Crear nueva mascota</a>
</div>

<GenericList MyList="Pets">
    <Body>
        <Pagination CurrentPage="currentPage"
                    TotalPages="totalPages"
                    SelectedPage="SelectedPageAsync" />

        <div class="mb-2" style="display: flex; flex-wrap:wrap; align-items: center;">
            <input style="width: 400px;" type="text" class="form-control" id="titulo" placeholder="Buscar país..." @bind-value="Filter" />
            <button type="button" class="btn btn-outline-primary mx-1" @onclick="ApplyFilterAsync">Filtrar</button>
            <button type="button" class="btn btn-outline-danger" @onclick="CleanFilterAsync">Limpiar</button>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Especie</th>
                    <th>Raza</th>
                    <th>Edad</th>
                    <th>Género</th>
                    <th>Color</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pet in Pets!)
                {
                    <tr>
                        <td>@pet.Name</td>
                        <td>@pet.Specie</td>
                        <td>@pet.Race</td>
                        <td>@pet.Age</td>
                        <td>@pet.Gender</td>
                        <td>@pet.Color</td>
                        <td>
                            <a href="/pets/edit/@pet.Id" class="btn btn-sm btn-warning">Editar</a>
                            <a href="/pets/details/@pet.Id" class="btn btn-info btn-sm">Detalless</a>
                            <button @onclick="@(() => DeleteAsync(pet))" class="btn btn-danger">Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>